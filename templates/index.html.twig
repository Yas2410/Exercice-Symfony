<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <title>Exercice Blog Articles</title>
</head>

<body>

<!--HEADER + LINK ARTICLE-->
<header>
    <nav>
        <ul class="menu">
            <div><img class ="imgResp" src="https://symfony.com/logos/symfony_black_03.png" alt="Logo Symfony"></div>
            <li><a href="{{ path("article", {'id' : 1}) }}">Article 1</a></li>
            <li><a href="{{ path("article", {'id' : 2}) }}">Article 2</a></li>
            <li><a href="{{ path("article", {'id' : 3}) }}">Article 3</a></li>
        </ul>
    </nav>
</header>

<!--LIST OF ALL MY ARTICLES : La boucle ci-aprÃ¨s me permet d'afficher
tous les articles disponibles-->
<section>
    {% for article in articles %}
        <div id="margin">
            <img src="{{ article.image }}">
            <h2>
            {{ article.title }}
            </h2>
            <p>
            {{ article.content }}
            </p>
        </div>
    {% endfor %}
</section>

<!--FOOTER-->
<footer>
    <nav>
        <ul class="menu">
            <li>LINK 1</li>
            <li>LINK 2</li>
            <li>LINK 3</li>
        </ul>
    </nav>
</footer>

</body>
</html>